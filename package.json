{
	"name": "aquapreneur",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": "22",
		"npm": "10"
	},
	"scripts": {
		"build": "vite build",
		"start": "node build",
		"dev": "vite dev",
		"preview": "vite preview",
		"prepare": "husky && (svelte-kit sync || echo '')",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:studio": "drizzle-kit studio --config=.drizzle.config.ts",
		"db:make-migration": "drizzle-kit generate --config=.drizzle.config.ts --name",
		"db:make-data-migration": "drizzle-kit generate --custom --config=.drizzle.config.ts --name",
		"db:migrate": "drizzle-kit migrate --config=.drizzle.config.ts",
		"db:migrate-test": "dotenvx -q run -f .env.test -- drizzle-kit migrate --config=.drizzle.config.ts",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.33.0",
		"@playwright/browser-chromium": "^1.54.2",
		"@playwright/browser-firefox": "^1.54.2",
		"@playwright/test": "^1.54.2",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/deep-equal": "^1.0.4",
		"@types/lodash": "^4.17.20",
		"@types/node": "^24.3.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-drizzle": "^0.2.3",
		"eslint-plugin-svelte": "3.11.0",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte-check": "^4.3.1",
		"sveltekit-superforms": "^2.27.4",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.1",
		"vite": "^6.3.6"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.48.4",
		"@inquirer/prompts": "^7.8.3",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@sentry/sveltekit": "9.28.1",
		"@sveltejs/adapter-node": "^5.3.1",
		"@sveltejs/kit": "^2.31.1",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"arctic": "^3.4.0",
		"camelcase-keys": "^9.1.3",
		"deep-equal": "^2.2.3",
		"drizzle-kit": "^0.31.0",
		"drizzle-orm": "^0.44.4",
		"drizzle-seed": "^0.3.1",
		"drizzle-zod": "^0.8.3",
		"lodash": "^4.17.21",
		"postgres": "^3.4.5",
		"svelte": "^5.38.1",
		"tsx": "^4.20.4",
		"vitest": "^3.2.3",
		"yoctocolors": "^2.1.1",
		"zod": "4.0.10"
	},
	"overrides": {
		"cookie": "^1.0.2",
		"esbuild": "^0.25.9"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"prettier --check",
			"eslint"
		],
		"*.{json,css,postcss,html,md}": [
			"prettier --check"
		]
	}
}
