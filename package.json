{
  "name": "aquapreneur",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": "22",
    "npm": "10"
  },
  "scripts": {
    "build": "vite build",
    "start": "node build",
    "dev": "vite dev",
    "preview": "vite preview",
    "prepare": "husky && (svelte-kit sync || echo '')",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "db:make-migration": "drizzle-kit generate --config=.drizzle.config.ts --name",
    "db:make-data-migration": "drizzle-kit generate --custom --config=.drizzle.config.ts --name",
    "db:migrate": "drizzle-kit migrate --config=.drizzle.config.ts",
    "db:migrate-test": "dotenvx -q run -f .env.test -- drizzle-kit migrate --config=.drizzle.config.ts",
    "test:e2e": "dotenvx -q run -f .env.test -- playwright test",
    "test": "npm run test:e2e",
    "create-api-token": "dotenvx -q run -- tsx scripts/create-api-token.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@gouvfr/dsfr": "^1.13.0",
    "@playwright/test": "^1.49.1",
    "@sveltejs/adapter-node": "^5.2.11",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.13.5",
    "arctic": "^3.4.0",
    "camelcase-keys": "^9.1.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-svelte": "^3.0.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.4"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.38.4",
    "@inquirer/prompts": "^7.3.2",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@sentry/sveltekit": "^9.5.0",
    "decamelize": "^6.0.0",
    "drizzle-kit": "^0.30.2",
    "drizzle-orm": "^0.40.1",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.7.0",
    "postgres": "^3.4.5",
    "tsx": "^4.19.3",
    "yoctocolors": "^2.1.1"
  },
  "overrides": {
    "cookie": "^1.0.2",
    "esbuild": "^0.25.1"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --check",
      "eslint"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --check"
    ]
  }
}
